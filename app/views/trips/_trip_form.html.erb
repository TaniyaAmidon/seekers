<%= simple_form_for trip do |f| %>
<%= f.input :title %>
<%= f.input :destination %>

<%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
<%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>

<!-- <input type="date" name="start_date">
 --><!-- <input type="date" name="end_date"> -->
<%= f.input :description, as: :text %>
<%= f.input :organiser_exp, as: :text %>
<%= f.input :visited_before, as: :boolean %>
<%= f.input :crew_exp, as: :text %>
<%= f.input :crew_exp_required, as: :boolean %>
<%= f.input :max_crew_size, collection: 2..12 %>
<%= f.association :activity %>
<%= f.input :price %>
<!-- photouploader throws undefined method error -->
<%#= f.input :photo %>
<%#= f.input :photo_cache, as: :hidden %>


<%= f.submit "Create Trip"%>
<% end %>
