<%= form_tag order_payments_path(@order) do %>
  <article>
    <label class="amount">
      <strong>Deposit: <%= humanized_money_with_symbol(@order.amount) %></strong>
    </label>
    <p>Pay your deposit to secure your place on the trip. <br> Deposits are refunded on the last day or forfeited in the event of a no-show.</p>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Trip deposit"
    data-email="<%= current_user.email %>"
    data-description="<%= @order.trip.title %>"
    data-amount="<%= @order.amount_cents %>"
    data-currency="<%= @order.amount.currency %>">

    </script>

<% end %>

