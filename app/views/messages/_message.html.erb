    <p><%= message.user.first_name %></p>
    <br>
    <img class= "avatar" src="https://images.unsplash.com/photo-1516832186043-66a7a1723278?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="profile">
    <%#= image_tag message.user.photo, class: "avatar" %>
    <%= message.content %>
  </div>
</div>
